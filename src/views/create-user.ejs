<!DOCTYPE html>
<html>
<head>
	<title>Create New User - Invoice Payment System</title>
	<link rel="stylesheet" href="/css/styles.css">
</head>
<body>
	<div class="container">
		<div class="form-header">
			<h1>Create New User</h1>
			<a href="/" class="btn back-btn">Back to Home</a>
		</div>

		<% if (locals.error) { %>
			<div class="error-message">
				<%= error %>
			</div>
		<% } %>

		<form action="/create-user" method="POST" class="form-container">
			<div class="form-group">
				<label for="username">Username:</label>
				<input 
					type="text" 
					id="username" 
					name="username" 
					required
					value="<%= locals.formData ? formData.username : '' %>"
					class="form-control"
				>
				<small>Username must be unique</small>
			</div>

			<div class="form-group">
				<label for="firstName">First Name:</label>
				<input 
					type="text" 
					id="firstName" 
					name="firstName" 
					required
					value="<%= locals.formData ? formData.firstName : '' %>"
					class="form-control"
				>
			</div>

			<div class="form-group">
				<label for="lastName">Last Name:</label>
				<input 
					type="text" 
					id="lastName" 
					name="lastName" 
					required
					value="<%= locals.formData ? formData.lastName : '' %>"
					class="form-control"
				>
			</div>

			<div class="form-group">
				<label for="balance">Initial Balance ($):</label>
				<input 
					type="number" 
					id="balance" 
					name="balance" 
					step="0.01" 
					value="<%= locals.formData ? formData.balance : '0.00' %>"
					class="form-control"
				>
			</div>

			<button type="submit" class="btn submit-btn">Create User</button>
		</form>
	</div>
</body>
</html>

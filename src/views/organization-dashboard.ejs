<!DOCTYPE html>
<html>
<head>
    <title><%= organization.name %> - Invoice Payment System</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1><%= organization.name %></h1>
        
        <div class="action-buttons">
            <a href="/organization/<%= organization._id %>/create-invoice" class="btn">Invoice Payment</a>
            <a href="/organization/<%= organization._id %>/create-user" class="btn">Create New User</a>
            <a href="/" class="btn">Back to Organizations</a>
        </div>

        <div class="users-table">
            <h2>Users</h2>
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (locals.users && users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.firstName %></td>
                                <td><%= user.lastName %></td>
                                <td>$<%= user.balance.toFixed(2) %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No users found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <title>Invoice Payment System</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Invoice Payment System</h1>
        
        <div class="action-buttons">
            <a href="/create-organization" class="btn">Create New Organization</a>
        </div>

        <div class="organizations-table">
            <h2>Organizations</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (locals.organizations && organizations.length > 0) { %>
                        <% organizations.forEach(org => { %>
                            <tr>
                                <td><%= org.name %></td>
                                <td><%= org.createdAt.toLocaleDateString() %></td>
                                <td>
                                    <a href="/organization/<%= org.name %>" class="btn">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">No organizations found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>